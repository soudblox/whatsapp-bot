{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"lib": [
			"esnext"
		],
		"target": "ES2020",
		"rootDir": ".",
		"outDir": "./dist",
		"declaration": false,
		"skipLibCheck": true,
		"baseUrl": ".",
		"removeComments": true,
		"importHelpers": true,
		"strict": true,
		"strictBindCallApply": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"alwaysStrict": true,
		"importsNotUsedAsValues": "error",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"types": [
			"node"
		],
		"module": "CommonJS",
		"esModuleInterop": true,
		"incremental": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"pretty": true
	},
	"exclude": [
		"./dist",
		"./node_modules"
	],
	"include": [
		"./src"
	]
}